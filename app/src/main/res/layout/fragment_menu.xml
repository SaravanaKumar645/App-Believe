<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.menu.MenuFragment">


    <TextView
        android:id="@+id/text_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="Welcome Vendor"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.045" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_home">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            app:layout_constraintVertical_bias=".50">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout2"
                android:layout_width="0dp"
                android:layout_height="110dp"
                app:layout_constraintBottom_toBottomOf="@id/constraintLayout"
                app:layout_constraintLeft_toLeftOf="@id/constraintLayout"
                app:layout_constraintRight_toRightOf="@id/constraintLayout"
                app:layout_constraintTop_toTopOf="@id/constraintLayout"
                app:layout_constraintVertical_bias="0.0">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginStart="28dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.55"
                    app:srcCompat="@drawable/glass2">

                </ImageView>

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginStart="40dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/imageView2"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.55"
                    app:srcCompat="@drawable/glass2"></ImageView>

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginStart="40dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/imageView4"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.55"
                    app:srcCompat="@drawable/glass2"></ImageView>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <EditText
                android:id="@+id/p_category1"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="48dp"
                android:background="@drawable/product_desc_bg"
                android:ems="10"
                android:inputType="textPersonName"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout2" />

            <EditText
                android:id="@+id/p_prodName"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/product_desc_bg"
                android:ems="10"
                android:inputType="textPersonName"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                app:layout_constraintEnd_toEndOf="@+id/p_category1"
                app:layout_constraintStart_toStartOf="@+id/p_category1"
                app:layout_constraintTop_toBottomOf="@+id/p_category1" />

            <EditText
                android:id="@+id/p_priceAmount"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/product_desc_bg"
                android:ems="10"
                android:inputType="number"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                app:layout_constraintEnd_toEndOf="@+id/p_prodName"
                app:layout_constraintStart_toStartOf="@+id/p_prodName"
                app:layout_constraintTop_toBottomOf="@+id/p_prodName" />

            <EditText
                android:id="@+id/p_GstAmount"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/product_desc_bg"
                android:ems="10"
                android:inputType="numberDecimal"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                app:layout_constraintEnd_toEndOf="@+id/p_priceAmount"
                app:layout_constraintStart_toStartOf="@+id/p_priceAmount"
                app:layout_constraintTop_toBottomOf="@+id/p_priceAmount" />

            <EditText
                android:id="@+id/p_deliveryCahrge"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/product_desc_bg"
                android:ems="10"
                android:inputType="number"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                app:layout_constraintEnd_toEndOf="@+id/p_GstAmount"
                app:layout_constraintStart_toStartOf="@+id/p_GstAmount"
                app:layout_constraintTop_toBottomOf="@+id/p_GstAmount" />

            <EditText
                android:id="@+id/p_offer"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/product_desc_bg"
                android:ems="10"
                android:inputType="number"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                app:layout_constraintEnd_toEndOf="@+id/p_deliveryCahrge"
                app:layout_constraintStart_toStartOf="@+id/p_deliveryCahrge"
                app:layout_constraintTop_toBottomOf="@+id/p_deliveryCahrge" />

            <TextView
                android:id="@+id/p_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Category"
                android:textAlignment="textStart"
                android:textColor="#02A4EC"
                android:textFontWeight="30"
                app:layout_constraintEnd_toStartOf="@+id/p_category1"
                app:layout_constraintHorizontal_bias="0.398"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/p_category1" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Product Name"
                android:textColor="#02A4EC"

                android:textFontWeight="30"
                app:layout_constraintEnd_toStartOf="@+id/p_prodName"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/p_category"
                app:layout_constraintTop_toTopOf="@+id/p_prodName" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Price Amount"
                android:textColor="#02A4EC"
                android:textFontWeight="30"
                app:layout_constraintEnd_toStartOf="@+id/p_priceAmount"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/textView5"
                app:layout_constraintTop_toTopOf="@+id/p_priceAmount" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="GST Amount"
                android:textColor="#02A4EC"
                android:textFontWeight="30"

                app:layout_constraintEnd_toStartOf="@+id/p_GstAmount"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/textView6"
                app:layout_constraintTop_toTopOf="@+id/p_GstAmount" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Delivery Charge"
                android:textColor="#02A4EC"
                android:textFontWeight="30"

                app:layout_constraintEnd_toStartOf="@+id/p_deliveryCahrge"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/textView7"
                app:layout_constraintTop_toTopOf="@+id/p_deliveryCahrge" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Offer(%)"
                android:textColor="#02A4EC"
                android:textFontWeight="30"
                app:layout_constraintEnd_toStartOf="@+id/p_offer"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/textView8"
                app:layout_constraintTop_toTopOf="@+id/p_offer" />

            <Button
                android:id="@+id/p_Upload"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="60dp"
                android:background="@drawable/edittext_bg"
                android:text="Upload"
                android:textAllCaps="false"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/p_offer"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/textView9"
                app:layout_constraintTop_toBottomOf="@+id/p_offer"
                app:layout_constraintVertical_bias="0.0" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>